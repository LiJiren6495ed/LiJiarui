{
    "tasks": [
        {
            "type": "shell",
            "label": "task gcc",  // 编译任务的名称，跟上面preLaunchTask的值对应
            "command": "/usr/bin/g++",  // 编译器的路径，须跟你自己的电脑相符
            "args": [
                "-g",
                "${file}",
                "-o",
                "${fileDirname}/${fileBasenameNoExtension}"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        }
    ],
    "version": "2.0.0"
}